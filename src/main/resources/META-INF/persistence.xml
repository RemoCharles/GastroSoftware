<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="JpaDemosPU" transaction-type="RESOURCE_LOCAL">

        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>


        <class>slgp.gastrosoftware.zentrale.persister.domain.Esswaren</class>
        <class>slgp.gastrosoftware.zentrale.persister.domain.Konsumartikel</class>
        <class>slgp.gastrosoftware.zentrale.persister.domain.Getraenke</class>
        <class>slgp.gastrosoftware.zentrale.persister.domain.Tagesmenu</class>
        <class>slgp.gastrosoftware.zentrale.persister.domain.Person</class>
        <validation-mode>AUTO</validation-mode>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:postgresql://localhost:5432/GastroSoftware"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="postgres"/>

            <property name="eclipselink.ddl-generation.output-mode"
                      value="database"/>

            <!-- SQL-Statements nicht ausgeben -->
            <!-- <property name="eclipselink.logging.level" value="FINE"/> -->

            <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
        </properties>
    </persistence-unit>

</persistence>